@page
@model NumbersFinal.Pages.NumbersList.CreateModel

<br />

<h2 class="text-info">Submit a Number</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-dange" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="number.StringNumber">Number to Submit</label>
            </div>
            <div class="col-6">
                <input type="number" asp-for="number.StringNumber" class="form-control" asp-is-invariant="true" step="0.01" lang="nb" />
            </div>
            <span asp-validation-for="number.StringNumber"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-3 offset-2">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>